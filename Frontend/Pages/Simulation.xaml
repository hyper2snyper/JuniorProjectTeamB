<Page x:Class="JuniorProject.Simulation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuniorProject"
        mc:Ignorable="d"
        Background="#FF424242">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="2" Margin="10,10,0,0" Padding="5"  Width="401" Height="45" HorizontalAlignment="Left" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" >
                <Button Content="Refresh" HorizontalAlignment="Left" Height="32" Margin="10,0" VerticalAlignment="Top" Width="45" Click="RefreshClicked"/>
                <Button Content="Start" HorizontalAlignment="Left" Height="32" Margin="10, 0" VerticalAlignment="Top" Width="45" Click="StartClicked"/>
                <Button Content="Save" HorizontalAlignment="Left" Height="32" Margin="10, 0" VerticalAlignment="Top" Width="45" Click="SaveClicked"/>
                <Button Content="Pause" HorizontalAlignment="Left" Height="32" Margin="10, 0" VerticalAlignment="Top" Width="45" Click="PauseClicked"/>
                <Button Content="Back" Height="32" Width="45" Margin="10, 0" Click="BackToMainMenu"/>
            </StackPanel>
        </Border>
        <Image x:Name="Map" HorizontalAlignment="Left" Height="448" VerticalAlignment="Top" Width="855" Margin="2,55,0,0"/>
        <Button Content="Update" HorizontalAlignment="Left" Margin="344,17,0,0" VerticalAlignment="Top" Height="31" Width="61" Click="UpdateButton_Click"/>
        <Label Content="Simulation Time" HorizontalAlignment="Left" Margin="473,79,0,0" VerticalAlignment="Top" Height="30" Width="166" AutomationProperties.Name="Sim" Foreground="White" FontSize="18" FontWeight="Bold"/>
        <TextBlock x:Name="TxtSimulationTime" Text="00:00:00" Grid.Row="0" Margin="483,114,39,364" Foreground="White" FontSize="16" FontWeight="Bold" />
        <Label Content="Elapsed Time" HorizontalAlignment="Left" Margin="473,229,0,0" VerticalAlignment="Top" Height="35" Width="175" AutomationProperties.Name="ETime" Foreground="White" FontSize="18" FontWeight="Bold"/>
        <TextBlock x:Name="TxtElapsedTime" Text="00:00:00" Margin="481,264,38,217" Foreground="White" FontSize="16" FontWeight="Bold" />


    </Grid>
</Page>
