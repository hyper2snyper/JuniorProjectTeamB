<Page x:Class="JuniorProject.Frontend.Pages.Loading"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:local="clr-namespace:JuniorProject.Frontend.Pages"
      MinWidth="1100"
      MinHeight="800"
      mc:Ignorable="d" 
      Title="Loading">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <fa:ImageAwesome Icon="Cog" Spin="True" SpinDuration="4" Foreground="White" Width="75" HorizontalAlignment="Center"/>
            <Label x:Name="LoadingMessage" Content="LOADING" FontSize="48" Foreground="White" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
