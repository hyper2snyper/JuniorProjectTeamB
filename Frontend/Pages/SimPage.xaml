<Page x:Class="JuniorProject.SimPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JuniorProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#FF424242">

    <Grid>
        <Label Content="Simulation Page" HorizontalAlignment="Center" Margin="0,115,0,0" VerticalAlignment="Top" Height="54" Width="196" AutomationProperties.Name="Sim" Foreground="White" FontSize="24" FontWeight="Bold"/>
        <Button Content="Back to Simulation" HorizontalAlignment="Left" Margin="216,344,0,0" VerticalAlignment="Top" Click="BackButton_Click" Width="160"/>
        <Button Content="Settings" HorizontalAlignment="Left" Margin="380,344,0,0" VerticalAlignment="Top" Click="SettingsButton_Click" Width="72"/>
        <Label Content="Simulation Time" HorizontalAlignment="Left" Margin="231,205,0,0" VerticalAlignment="Top" Height="54" Width="196" AutomationProperties.Name="Sim" Foreground="White" FontSize="18" FontWeight="Bold"/>
        <Label Content="Simulation Time" HorizontalAlignment="Left" Margin="231,205,0,0" VerticalAlignment="Top" Height="54" Width="196" AutomationProperties.Name="SimTime" Foreground="White" FontSize="18" FontWeight="Bold"/>
        <TextBlock Name="TxtSimulationTime" Text="00:00:00" Grid.Row="0" Margin="231,250,451,160" Foreground="White" FontSize="16" FontWeight="Bold" />
        <Label Content="Elapsed Time" HorizontalAlignment="Left" Margin="415,205,0,0" VerticalAlignment="Top" Height="54" Width="196" AutomationProperties.Name="ETime" Foreground="White" FontSize="18" FontWeight="Bold"/>
        <TextBlock Name="TxtElapsedTime" Text="00:00:00" Margin="415,250,302,163" Foreground="White" FontSize="16" FontWeight="Bold" />
        <Button x:Name="UpdateButton" Content="Update" HorizontalAlignment="Left" Margin="456,344,0,0" VerticalAlignment="Top" Click="UpdateButton_Click" Width="70"/>
        <Button x:Name="StartButton" Content="Start" HorizontalAlignment="Left" Margin="306,319,0,0" VerticalAlignment="Top" Click="StartButton_Click" Width="70"/>
        <Button x:Name="PauseButton" Content="Refresh" HorizontalAlignment="Left" Margin="382,319,0,0" VerticalAlignment="Top" Click="RefreshButton_Click" Width="70"/>
    </Grid>
</Page>
