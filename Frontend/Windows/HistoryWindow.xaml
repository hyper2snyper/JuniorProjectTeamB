<Window x:Class="JuniorProject.Frontend.Windows.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuniorProject.Frontend.Windows"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="Simulation History" Height="479" Width="871" Background="Gray">
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
    <Grid>
        <TabControl SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}">
            <TabItem Header="Prices">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5">
                        <TextBlock Text="Select Resource: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox ItemsSource="{Binding AvailableResources}"
                                  SelectedItem="{Binding SelectedResource, Mode=TwoWay}"
                                  Width="150"/>
                    </StackPanel>

                    <lvc:CartesianChart
                        Grid.Row="1"
                        Series="{Binding CurrentSeries}">
                    </lvc:CartesianChart>
                </Grid>
            </TabItem>
            <TabItem Header="Resource Amount">
                <Grid>
                    <lvc:CartesianChart
                        Series="{Binding CurrentSeries}">
                    </lvc:CartesianChart>
                </Grid>
            </TabItem>
            <TabItem Header="Trades">
                <Grid>
                    <lvc:CartesianChart
                        Series="{Binding CurrentSeries}">
                    </lvc:CartesianChart>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>