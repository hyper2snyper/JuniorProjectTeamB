<Window x:Class="JuniorProject.Frontend.Components.InfoModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuniorProject"
        mc:Ignorable="d"
        Height="461" Width="422" Background="#FF424242">
    <Grid Margin="0,0,0,-16">
        <Border BorderBrush="Black" BorderThickness="2" Margin="0,10,0,0" Padding="5" Width="330" Height="45" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock x:Name="Title"  HorizontalAlignment="Center" Foreground="White" FontSize="25" Text="Cry Havoc" Width="310" VerticalAlignment="Center" Height="36" TextAlignment="Center"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="2" Margin="23,74,23,242">
            <TextBlock  x:Name="Information" Foreground="White" Margin="8,0,8,0" Focusable="True" TextAlignment="Center"><Run Text="Field 1"/><LineBreak/><Run Text="Field 2"/><LineBreak/><Run Text="Field 3"/><LineBreak/><Run Text="Field 4"/></TextBlock>
        </Border>
        <Border BorderBrush="Black" BorderThickness="2" Margin="121,217,121,47" Height="150" Width="150">
            <Image x:Name="Image" Width="75" Height="75" />
        </Border>

    </Grid>
</Window>
