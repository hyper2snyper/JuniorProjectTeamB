<Page x:Class="JuniorProject.Simulation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuniorProject"
        mc:Ignorable="d"
        Background="#FF424242">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="2" Margin="10" Padding="5"  Width="280" Height="45" HorizontalAlignment="Left" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" >
                <Button Content="Refresh" HorizontalAlignment="Left" Height="32" Margin="10,0" VerticalAlignment="Top" Width="45" Click="RefreshClicked"/>
                <Button Content="Start" HorizontalAlignment="Left" Height="32" Margin="10, 0" VerticalAlignment="Top" Width="45" Click="StartClicked"/>
                <Button Content="Pause" HorizontalAlignment="Left" Height="32" Margin="10, 0" VerticalAlignment="Top" Width="48" Click="PauseClicked"/>
                <Button Content="Back" HorizontalAlignment="Left" Height="32" Margin="10, 0" VerticalAlignment="Top" Width="48" Click="BackToMainMenu"/>
            </StackPanel>
        </Border>
        <Image x:Name="Map" HorizontalAlignment="Left" Height="362" VerticalAlignment="Top" Width="790" Margin="10,60,0,0"/>


    </Grid>
</Page>
